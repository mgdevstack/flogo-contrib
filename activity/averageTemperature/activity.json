{
  "name": "averageTemperature",
  "version": "0.0.1",
  "type": "flogo:activity",  
  "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/averageTemperature",
  "description": "This activity calculates average of current temperature and all previously recorded temperatures",
  "author": "Mayank Gaikwad <mayank.gaikwad@globant.com>",
  "inputs":[
    {
      "name": "temperature",
      "type": "number"
    },
    {
      "name": "previousAverageTemperature",
      "type": "number"
    },
    {
      "name": "totalCount",
      "type": "number"
    }
  ],
  "outputs": [
    {
      "name": "result",
      "type": "number"
    }
  ]
}